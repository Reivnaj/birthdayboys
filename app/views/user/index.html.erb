<h1 class="text-light text-center mt-5 mb-5"> ADMIN SYSTEM</h1>

<table class="table table-dark">



    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Email</th>
            <th scope="col">À payé ?</th>
        </tr>
    </thead>



    <tbody>


        <% @user.each do |user| %>
    
            <tr>

                <th scope="row"><%= user.id %></th>

                <td><%= user.name %></td>

                <td><%= user.first_name %></td>

                <td><%= user.email %></td>

                <td class="user-<%= user.id %>">

                    <%= link_to "#{ user.payed ? 'à payé' : 'radin' }", user_toggle_payed_status_path(user), method: :patch, remote: :true, class: "btn ml-5 btn-#{ user.payed ? 'success' : 'danger' }"  %>

                    
                </td>

            </tr>
    
        <%end %>


    </tbody>
</table>


